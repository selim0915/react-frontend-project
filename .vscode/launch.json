{
  "configurations": [
    {
      "name": "CHROME",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:50001",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Node (react-frontend-project)",
      "program": "${workspaceFolder}/server/server.js",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development" // production | development
      }
    }
  ]
}
